---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'STOR Connect GmbH - Professionelle Infrastrukturlösungen aus Wien',
  description: 'Tiefbau, Asphaltierung, Spülbohrungen und Glasfaserverlegung - STOR Connect GmbH bietet hochwertige Baudienstleistungen in Wien und Österreich.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Kontakt aufnehmen',
        href: '/kontakt',
      },
      { text: 'Unsere Leistungen', href: '/leistungen/tiefbau' },
    ]}
    image={{ src: '~/assets/images/hero-stor-trucks.jpg', alt: 'STOR Connect LKW-Flotte und Team' }}
  >
    <Fragment slot="title">
      Professionelle <span class="text-accent dark:text-white">Infrastrukturlösungen</span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="leistungen"
    tagline="Unsere Stärken"
    title="Warum STOR Connect?"
    subtitle="Als modernes Bauunternehmen mit Sitz in Wien verbinden wir Erfahrung, innovative Technologie und höchste Qualitätsstandards."
    items={[
      {
        title: 'Erfahrung & Expertise',
        description:
          'Fundierte Fachkenntnisse im Baugewerbe und moderne Technologie für optimale Projektergebnisse.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Zuverlässige Umsetzung',
        description:
          'Termingerechte Fertigstellung und transparente Kommunikation in jedem Projektschritt.',
        icon: 'tabler:clock-check',
      },
      {
        title: 'Moderne Technik',
        description:
          'Einsatz neuester Maschinen und Verfahren für effiziente und präzise Arbeiten.',
        icon: 'tabler:tools',
      },
      {
        title: 'Qualität & Sicherheit',
        description:
          'Höchste Qualitätsstandards und strikte Einhaltung aller Sicherheitsvorschriften.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Umweltbewusstsein',
        description:
          'Nachhaltige Bauverfahren und umweltschonende Materialien wo immer möglich.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Wiener Wurzeln',
        description:
          'Als Wiener Unternehmen kennen wir die lokalen Anforderungen und Gegebenheiten.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Tiefbau & Infrastruktur"
    title="Tiefbau & Fundamentarbeiten"
    items={[
      {
        title: 'Erdarbeiten & Aushub',
        description:
          'Präzise Erdarbeiten mit modernster Maschinentechnik für jede Projektgröße.',
      },
      {
        title: 'Fundamentierung',
        description:
          'Solide Fundamente als Basis für langlebige Bauwerke.',
      },
      {
        title: 'Leitungsverlegung',
        description:
          'Fachgerechte Verlegung von Wasser-, Kanal- und Stromleitungen.',
      },
    ]}
    image={{
      src: '~/assets/images/hero-image.png',
      alt: 'Tiefbau Arbeiten',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Solide Basis für Ihr Bauvorhaben
      </h3>
      Von Erdarbeiten bis zu komplexen Leitungsverlegungen - wir realisieren Ihr Infrastrukturprojekt fachgerecht und termingerecht.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Straßen & Parkplätze',
        description: 'Professionelle Asphaltierung für langlebige Verkehrsflächen.',
      },
      {
        title: 'Hofeinfahrten',
        description:
          'Hochwertige Asphaltarbeiten für private und gewerbliche Zufahrten.',
      },
      {
        title: 'Schnelle Befahrbarkeit',
        description:
          'Minimale Ausfallzeiten durch effiziente Arbeitsweise.',
      },
      {
        title: 'Oberflächenversiegelung',
        description:
          'Professionelle Versiegelung für maximale Haltbarkeit.',
      },
    ]}
    image={{
      src: '~/assets/images/hero-image.png',
      alt: 'Asphaltierung',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Asphaltierung & Straßenbau
      </h3>
      Professionelle Asphaltarbeiten für Straßen, Parkplätze und Privatflächen - alles aus einer Hand mit langer Haltbarkeit.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'HDD-Spülbohrtechnik',
        description:
          'Moderne Horizontalbohrverfahren für schonende Leitungsverlegung.',
      },
      {
        title: 'Glasfaserinfrastruktur',
        description:
          'Spezialisiert auf die Verlegung zukunftssicherer Glasfasernetze.',
      },
      {
        title: 'Minimale Beeinträchtigung',
        description:
          'Keine Aufgrabungen - geringe Verkehrs- und Umweltbeeinträchtigung.',
      },
      {
        title: 'Präzise Verlegung',
        description: 'Zentimetergenaue Positionierung durch moderne Steuerungssysteme.',
      },
    ]}
    image={{
      src: '~/assets/images/hero-image.png',
      alt: 'Spülbohrungen und Glasfaser',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Spülbohrungen & Glasfaserverlegung
      </h3>
      Moderne HDD-Technik für schonende Leitungsverlegung und Glasfaserinfrastruktur - präzise und umweltschonend.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="So arbeiten wir"
    subtitle="Ihr Projekt in besten Händen - von der ersten Beratung bis zur finalen Übergabe"
    items={[
      {
        title: 'Schritt 1: <span class="font-medium">Beratung & Planung</span>',
        description:
          'Wir analysieren Ihr Projekt, erstellen ein detailliertes Konzept und beraten Sie umfassend zu allen technischen und organisatorischen Aspekten.',
        icon: 'tabler:clipboard-text',
      },
      {
        title: 'Schritt 2: <span class="font-medium">Professionelle Umsetzung</span>',
        description:
          'Unser erfahrenes Team setzt Ihr Projekt mit modernster Technik und höchster Präzision um - termingerecht und mit transparenter Kommunikation.',
        icon: 'tabler:tool',
      },
      {
        title: 'Schritt 3: <span class="font-medium">Qualitätskontrolle & Übergabe</span>',
        description:
          'Nach Abschluss erfolgt eine gründliche Qualitätsprüfung. Wir übergeben Ihr Projekt dokumentiert und einwandfrei.',
        icon: 'tabler:checks',
      },
      {
        title: 'Fertig!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: '~/assets/images/hero-image.png',
      alt: 'STOR Connect Arbeitsprozess',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Häufige Fragen"
    subtitle="Hier finden Sie Antworten auf die häufigsten Fragen zu unseren Leistungen und unserem Unternehmen."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Welche Leistungen bietet STOR Connect an?',
        description:
          'Wir sind spezialisiert auf Tiefbau, Asphaltierung, Spülbohrungen und Glasfaserverlegung. Von kleinen Privatprojekten bis zu großen Infrastrukturvorhaben - wir haben die Expertise und das Equipment für Projekte jeder Größenordnung.',
      },
      {
        title: 'In welchen Regionen sind Sie tätig?',
        description:
          'Unser Hauptsitz ist in Wien. Wir arbeiten in ganz Österreich und bei größeren Projekten auch in angrenzenden Regionen. Kontaktieren Sie uns für eine konkrete Einschätzung Ihres Projekts.',
      },
      {
        title: 'Wie läuft ein typisches Projekt ab?',
        description:
          'Nach einer kostenlosen Erstberatung und Planungsphase erstellen wir ein detailliertes Angebot. Nach Ihrer Freigabe beginnen wir mit der professionellen Umsetzung - stets in enger Abstimmung mit Ihnen. Abschließend erfolgt eine Qualitätskontrolle und dokumentierte Übergabe.',
      },
      {
        title: 'Bieten Sie auch Wartung und Service an?',
        description:
          'Ja, wir bieten für viele unserer Leistungen auch langfristige Wartungs- und Serviceverträge an. Sprechen Sie uns einfach auf Ihre spezifischen Anforderungen an.',
      },
      {
        title: 'Wie schnell können Sie mit einem Projekt starten?',
        description:
          'Das hängt vom Projektumfang und unserer aktuellen Auslastung ab. Kontaktieren Sie uns für eine konkrete Einschätzung - wir versuchen stets, flexibel auf Ihre Zeitpläne einzugehen.',
      },
      {
        title: 'Sind Sie für Großprojekte ausgerüstet?',
        description:
          'Ja, wir verfügen über das Equipment und die Expertise für Projekte jeder Größenordnung - von privaten Bauvorhaben bis zu kommunalen Infrastrukturprojekten. Sprechen Sie uns an!',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    title="Der DACH-Raum investiert jährlich Milliarden in Infrastruktur"
    subtitle="Echte Marktdaten zeigen das enorme Potenzial"
    stats={[
      { title: 'Mrd. € Tiefbau-Investitionen', amount: '8.5' },
      { title: 'Aktive Glasfaser-Ausschreibungen', amount: '12.000+' },
      { title: 'Wachstum Infrastruktursektor', amount: '15%' },
      { title: 'Unser Qualitätsversprechen', amount: '100%' },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Stats>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Jetzt Kontakt aufnehmen',
        href: '/kontakt',
      },
    ]}
  >
    <Fragment slot="title">
      Starten Sie Ihr Projekt<br class="block sm:hidden" /><span class="sm:whitespace-nowrap"> mit STOR Connect</span>
    </Fragment>

    <Fragment slot="subtitle">
      Kontaktieren Sie uns für ein unverbindliches Beratungsgespräch. <br class="hidden md:inline" />
      Wir entwickeln gemeinsam die beste Lösung für Ihr Infrastrukturprojekt.
    </Fragment>
  </CallToAction>
</Layout>
