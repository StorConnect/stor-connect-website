<script>
  // Klaro vom npm package importieren und initialisieren
  import * as Klaro from 'klaro';
  
  // Warte bis DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      Klaro.setup(window.klaroConfig);
    });
  } else {
    Klaro.setup(window.klaroConfig);
  }
</script>

<style is:global>
/* ========================================
   STOR CONNECT - MODERNES COOKIE BANNER
   Bottom-Position, Clean Design, Mobile-First
   ======================================== */

/* 1. BASE STYLES - Banner am Bottom */
.klaro .cookie-notice {
  position: fixed !important;
  bottom: 0 !important;
  left: 0 !important;
  right: 0 !important;
  top: auto !important;
  transform: none !important;
  
  max-width: 100% !important;
  width: 100% !important;
  margin: 0 !important;
  padding: 1.5rem !important;
  
  background: #ffffff !important;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1) !important;
  border-radius: 0 !important;
  border-top: 1px solid #e5e7eb !important;
  
  font-family: 'Inter Variable', system-ui, sans-serif !important;
  z-index: 9999 !important;
}

/* Desktop: Zentrierte Box am Bottom */
@media (min-width: 768px) {
  .klaro .cookie-notice {
    left: 50% !important;
    transform: translateX(-50%) !important;
    max-width: 600px !important;
    width: auto !important;
    min-width: 500px !important;
    bottom: 2rem !important;
    border-radius: 12px !important;
    border: 1px solid #e5e7eb !important;
  }
}

/* 2. OVERLAY - Dezenter Hintergrund */
.klaro .cookie-notice-hidden {
  display: none !important;
}

.klaro .cn-backdrop {
  background: rgba(0, 0, 0, 0.3) !important;
}

/* 3. TYPOGRAPHY - Clean & Readable */
.klaro .cookie-notice .cn-title {
  font-size: 1.25rem !important;
  font-weight: 600 !important;
  color: #36454F !important;
  margin-bottom: 0.75rem !important;
  line-height: 1.4 !important;
}

.klaro .cookie-notice .cn-body {
  font-size: 0.95rem !important;
  color: #6b7280 !important;
  line-height: 1.6 !important;
  margin-bottom: 1.5rem !important;
}

/* 4. BUTTONS - STOR Connect Styling */
.klaro .cookie-notice .cn-buttons {
  display: flex !important;
  gap: 0.75rem !important;
  flex-wrap: wrap !important;
  margin-top: 1.5rem !important;
}

/* Primary Button - STOR Rot */
.klaro .cn-decline,
.klaro .cm-btn.cm-btn-success,
.klaro .cookie-notice .cm-btn.cm-btn-success {
  background-color: #E01D22 !important;
  color: white !important;
  border: none !important;
  padding: 0.75rem 1.5rem !important;
  border-radius: 8px !important;
  font-weight: 500 !important;
  font-size: 0.95rem !important;
  cursor: pointer !important;
  transition: all 0.2s ease !important;
  flex: 1 !important;
  min-width: 140px !important;
}

.klaro .cm-btn.cm-btn-success:hover {
  background-color: #C9302C !important;
  transform: translateY(-1px) !important;
  box-shadow: 0 4px 12px rgba(224, 29, 34, 0.3) !important;
}

/* Secondary Button - Grau */
.klaro .cm-btn.cm-btn-decline,
.klaro .cookie-notice .cm-btn-info {
  background-color: #f3f4f6 !important;
  color: #36454F !important;
  border: 1px solid #e5e7eb !important;
  padding: 0.75rem 1.5rem !important;
  border-radius: 8px !important;
  font-weight: 500 !important;
  font-size: 0.95rem !important;
  cursor: pointer !important;
  transition: all 0.2s ease !important;
  flex: 1 !important;
  min-width: 140px !important;
}

.klaro .cm-btn.cm-btn-decline:hover,
.klaro .cookie-notice .cm-btn-info:hover {
  background-color: #e5e7eb !important;
  border-color: #d1d5db !important;
}

/* 5. LEARN MORE LINK */
.klaro .cookie-notice .cn-learn-more {
  color: #E01D22 !important;
  text-decoration: underline !important;
  font-size: 0.9rem !important;
  margin-top: 1rem !important;
  display: inline-block !important;
  cursor: pointer !important;
}

.klaro .cookie-notice .cn-learn-more:hover {
  color: #C9302C !important;
}

/* 6. MODAL (wenn "Mehr erfahren" geklickt) */
.klaro .cookie-modal {
  background: white !important;
  border-radius: 12px !important;
  max-width: 600px !important;
  padding: 2rem !important;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3) !important;
}

.klaro .cookie-modal .cm-modal-title {
  font-size: 1.5rem !important;
  font-weight: 600 !important;
  color: #36454F !important;
  margin-bottom: 1rem !important;
}

/* 7. SERVICE LIST (Cookie-Kategorien) */
.klaro .cookie-modal .cm-services {
  margin: 1.5rem 0 !important;
}

.klaro .cm-service {
  border: 1px solid #e5e7eb !important;
  border-radius: 8px !important;
  padding: 1rem !important;
  margin-bottom: 0.75rem !important;
  background: #fafafa !important;
}

.klaro .cm-service .cm-service-title {
  font-weight: 600 !important;
  color: #36454F !important;
  font-size: 1rem !important;
}

.klaro .cm-service .cm-service-description {
  font-size: 0.9rem !important;
  color: #6b7280 !important;
  margin-top: 0.5rem !important;
}

/* 8. TOGGLE SWITCHES - Modern Style */
.klaro .cm-switch {
  position: relative !important;
  display: inline-block !important;
  width: 48px !important;
  height: 24px !important;
}

.klaro .cm-switch input {
  opacity: 0 !important;
  width: 0 !important;
  height: 0 !important;
}

.klaro .cm-switch .cm-slider {
  position: absolute !important;
  cursor: pointer !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  bottom: 0 !important;
  background-color: #d1d5db !important;
  border-radius: 24px !important;
  transition: 0.3s !important;
}

.klaro .cm-switch input:checked + .cm-slider {
  background-color: #E01D22 !important;
}

.klaro .cm-switch .cm-slider:before {
  position: absolute !important;
  content: "" !important;
  height: 18px !important;
  width: 18px !important;
  left: 3px !important;
  bottom: 3px !important;
  background-color: white !important;
  border-radius: 50% !important;
  transition: 0.3s !important;
}

.klaro .cm-switch input:checked + .cm-slider:before {
  transform: translateX(24px) !important;
}

/* 9. MOBILE OPTIMIERUNGEN */
@media (max-width: 767px) {
  .klaro .cookie-notice {
    padding: 1.25rem !important;
    border-radius: 0 !important;
  }
  
  .klaro .cookie-notice .cn-title {
    font-size: 1.1rem !important;
  }
  
  .klaro .cookie-notice .cn-body {
    font-size: 0.9rem !important;
    margin-bottom: 1rem !important;
  }
  
  .klaro .cookie-notice .cn-buttons {
    flex-direction: column !important;
    gap: 0.5rem !important;
  }
  
  .klaro .cm-btn {
    width: 100% !important;
    min-width: 100% !important;
    padding: 0.875rem 1rem !important;
  }
  
  .klaro .cookie-modal {
    max-width: 95vw !important;
    max-height: 90vh !important;
    overflow-y: auto !important;
    margin: 1rem !important;
    padding: 1.5rem !important;
  }
}

/* 10. ACCESSIBILITY */
.klaro .cm-btn:focus,
.klaro .cm-switch:focus-within {
  outline: 2px solid #E01D22 !important;
  outline-offset: 2px !important;
}

/* 11. ANIMATIONS */
.klaro .cookie-notice {
  animation: slideUp 0.3s ease-out !important;
}

@keyframes slideUp {
  from {
    transform: translateY(100%) !important;
    opacity: 0 !important;
  }
  to {
    transform: translateY(0) !important;
    opacity: 1 !important;
  }
}

@media (min-width: 768px) {
  .klaro .cookie-notice {
    animation: slideUpCentered 0.3s ease-out !important;
  }
  
  @keyframes slideUpCentered {
    from {
      transform: translate(-50%, 100%) !important;
      opacity: 0 !important;
    }
    to {
      transform: translate(-50%, 0) !important;
      opacity: 1 !important;
    }
  }
}

/* 12. PRINT - Banner ausblenden */
@media print {
  .klaro {
    display: none !important;
  }
}
</style>
